  h3 {
    font-size: 15px;
    text-transform: uppercase;
    margin: 0 0 40px 0;
  }
  .list-lesson-item p {
    height: 80px;
    overflow: hidden;
    color: #999;
    text-overflow: ellipsis;
    margin-bottom: 10px;
  }
.btn-outline.btn-standard {
    color: #999;
    border-color: #89b2b5;
}
.btn-block {
    display: block;
    width: 100%;
    padding-left: 0;
    padding-right: 0;
}
.btn-outline {
    border-width: 2px;
    border-style: solid;
    background: transparent;
    padding-top: 7px;
    padding-bottom: 7px;
}
.btn {
    display: inline-block;
    padding: 8px 20px;
    text-align: center;
    vertical-align: middle;
    cursor: pointer;
    background-image: none;
    border: 1px solid transparent;
    border-radius: 10px;
    white-space: nowrap;
    line-height: 20px;
    font-weight: 700;
    font-size: 15px;
    -webkit-font-smoothing: antialiased;
}
a {
    color: #999;
    text-decoration: none;
}

  .skill-tree{
    margin: 40px 0 0 0;
  }
  ul{
    margin: 0;
    padding: 0;
    list-style: none;
  }
  .skill-tree-row{
    margin: 0 0 40px 0;
    text-align: center;
    vertical-align: top;
    -webkit-transition: all .5s;
    -moz-transition: all .5s;
    -ms-transition: all .5s;
    -o-transition: all .5s;
