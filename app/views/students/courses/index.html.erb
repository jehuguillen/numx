<style type="text/css">
  body {
    background-color: #e9e9e9;
  }
  .main-right {
    padding: 110px 40px 0 420px;
    max-width: 1140px;
    margin: 0 auto;
    min-width: 1080px;
    display: block;
    position: relative;
  }
  .page-main-right {
    width: 1048px;
/*    height: 900px;*/
