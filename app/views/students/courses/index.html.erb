    margin-bottom: 40px;

  }
  .lesson-header{
    color: #333;
    display: block;
    margin-left: 40px;

  }
  .list-lessons {
    display: table;
    position: relative;
    margin: -6px -15px -15px -15px;
    box-sizing: border-box;
    outline: none;
  }
  .list-lessons-row {
    display: table-row;
    box-sizing: border-box;
    outline: none;
  }
  .list-lesson-item {
    display: table-cell;
    width: 25%;
    min-width: 160px;
    box-sizing: border-box;
    outline: none;
  }
 .list-lesson-item .inner {
 	-webkit-box-shadow: 0 0 10px rgba(0,0,0,0.15);
    -moz-box-shadow: 0 0 10px rgba(0,0,0,0.15);
    box-shadow: 0 0 10px rgba(0,0,0,0.15);
