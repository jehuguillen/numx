    background-size: 550px;
    width: 54px;
    height: 55px
  }
  .skill-icon.unlocked .skill-icon-image {
    background-image: url(<%= asset_path 'skill-i.svg' %>);
  }
  .skill-icon-image {
    display: inline-block;
  }
  .skill-icon-strength.strength-1 {
    background-position: -2.9879em 0;
  }
  .skill-icon-strength.strength-2 {
    background-position: -3.5705em 0;
