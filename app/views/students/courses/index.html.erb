  .inner.soft_cyan {
    background: #46e5e6;
  }
  .inner.yellow {
    background: #ffff00;
  }
  
  .purple {
    color: #9b5fca;
  }
  .skill-icon {
    -webkit-border-radius: 400px;
    -moz-border-radius: 400px;
    border-radius: 400px;
    display: inline-block;
    position: relative;
    text-align: center;
