<table class="col-md-6, table">
  <thead>
    <th>Name</th>
    <th>Lesson</th>
    <th>Skill</th>
    <th>Course</th>
    <th><span class="glyphicon glyphicon-pencil"></span></th>
    <th><span class="glyphicon glyphicon-trash" ></span></th>
  </thead>
  <tbody>
    <% @questions.each do |q| %>
      <tr>
        <td><%= link_to q.name, question_path(q) %></td>
        <td><%= q.lesson.name %></td>
        <td><%= q.lesson.skill.name %></td>
        <td><%= q.lesson.skill.course.name %></td>
        <td><%= link_to 'Edit', edit_question_path(q), class: 'btn btn-default' %></td>
        <td><%= link_to 'X', lesson_path(q), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>