<div class="row">
  <div class="col-md-12">
    <%= link_to 'Add Skill', new_skill_path, class: 'btn btn-primary' %>
  </div>
</div>
<table class="table">
  <thead>
    <th>Name</th>
    <th></th>
    <th></th>
  </thead>
  <tbody>
    <% @skills.each do |s| %>
      <tr>
        <td><%= link_to s.name, skill_path(s) %></td>
        <td><%= link_to 'Edit', edit_skill_path(s), class: 'btn btn-default' %></td>
        <td><%= link_to 'Delete', skill_path(s), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
