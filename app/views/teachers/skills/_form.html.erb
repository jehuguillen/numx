<% if @skill.errors.any? %>
  <% @skill.errors.full_messages.each do |m| %>
    <p><%= m %></p>
  <% end %>
<% end %>
<%= simple_form_for [:teachers, @skill] do |f| %>
  <%= f.input :name %>
  <%= f.association :course %>


  <%= link_to 'Cancel', teachers_skills_path, class: 'btn btn-default' %>
  <%= f.submit nil, class: 'btn btn-primary' %>
<% end %>
